#!/usr/bin/env php
<?php declare(strict_types = 1);

use App\Kernel;
use Venta\Console\ConsoleApplication;

/*
|--------------------------------------------------------------------------
| Requiring auto loader
|--------------------------------------------------------------------------
|
| Including auto loader
*/
require __DIR__ . '/bootstrap/autoloader.php';

/*
|--------------------------------------------------------------------------
| Creating cli Application
|--------------------------------------------------------------------------
|
| Initializes application and boots kernel
*/
$app = new ConsoleApplication(new Kernel());

/*
|--------------------------------------------------------------------------
| Running Application
|--------------------------------------------------------------------------
|
| Application processes Input and passes results to Output
*/
$app->run();