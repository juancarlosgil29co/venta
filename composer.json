{
    "name": "venta/venta",
    "description": "Venta Framework",
    "type": "project",
    "authors": [
        {
            "name": "Konstantins Zukovs",
            "email": "kz@scandiweb.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "modules/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ventaframework/framework.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ventaframework/container.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ventaframework/routing.git"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "venta/framework": "dev-master",
        "ventaframework/routing": "dev-master"
    },
    "require-dev":{
        "phpunit/phpunit":"^5.4"
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
